{
  "name": "ljx-booking-automation",
  "version": "1.0.0",
  "description": "Automated booking system for LJX amenities and classes",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "docker:build": "docker compose build --platform linux/amd64,linux/arm64",
    "docker:up": "docker compose up", 
    "docker:down": "docker compose down",
    "docker:build-push": "./scripts/build-and-push.sh ashayc latest",
    "docker:build-push-tag": "./scripts/build-and-push.sh ashayc",
    "docker:amd64-only": "docker buildx build --platform linux/amd64 -t ashayc/ljx-booking-app:latest --push .",
    "docker:force-multiplatform": "docker buildx build --platform linux/amd64,linux/arm64 -t ashayc/ljx-booking-app:latest --push ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
} 